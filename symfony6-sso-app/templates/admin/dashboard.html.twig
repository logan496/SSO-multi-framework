{% extends 'admin_layout.html.twig' %}

{% block admin_content %}
    <div class="admin-header">
        <h1>üìä Dashboard Administration</h1>
        <p>Bienvenue, {{ user.name }} !</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">üë•</div>
            <div class="stat-info">
                <h3>{{ stats.total }}</h3>
                <p>Total Utilisateurs</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">üõ°Ô∏è</div>
            <div class="stat-info">
                <h3>{{ stats.admins }}</h3>
                <p>Administrateurs</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">üëî</div>
            <div class="stat-info">
                <h3>{{ stats.managers }}</h3>
                <p>Managers</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">üë§</div>
            <div class="stat-info">
                <h3>{{ stats.users }}</h3>
                <p>Utilisateurs</p>
            </div>
        </div>
    </div>

    <div class="recent-activity">
        <h2>Activit√© R√©cente</h2>
        <div class="activity-table">
            <table>
                <thead>
                <tr>
                    <th>Utilisateur</th>
                    <th>Email</th>
                    <th>R√¥les</th>
                    <th>Statut</th>
                </tr>
                </thead>
                <tbody>
                {% for user_item in users|slice(0, 5) %}
                    <tr>
                        <td>{{ user_item.name }}</td>
                        <td>{{ user_item.email }}</td>
                        <td>
                            {% for role in user_item.roles %}
                                <span class="role-badge role-{{ role|lower|replace({'role_': ''}) }}">
                                {{ role|replace({'ROLE_': ''})|title }}
                            </span>
                            {% endfor %}
                        </td>
                        <td><span class="status-active">‚úÖ Actif</span></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <style>
        .admin-header {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            text-align: center;
        }

        .admin-header h1 {
            color: white;
            margin: 0 0 10px 0;
            font-size: 2.5rem;
        }

        .admin-header p {
            color: rgba(255, 255, 255, 0.8);
            margin: 0;
            font-size: 1.1rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            padding: 25px;
            display: flex;
            align-items: center;
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-icon {
            font-size: 3rem;
            margin-right: 20px;
        }

        .stat-info h3 {
            color: white;
            font-size: 2rem;
            margin: 0 0 5px 0;
        }

        .stat-info p {
            color: rgba(255, 255, 255, 0.7);
            margin: 0;
            font-size: 0.9rem;
        }

        .recent-activity {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
        }

        .recent-activity h2 {
            color: white;
            margin: 0 0 20px 0;
        }

        .activity-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .activity-table th,
        .activity-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .activity-table th {
            color: white;
            font-weight: 600;
        }

        .activity-table td {
            color: rgba(255, 255, 255, 0.8);
        }

        .role-badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: bold;
            margin-right: 5px;
        }

        .role-admin { background: #e74c3c; color: white; }
        .role-manager { background: #f39c12; color: white; }
        .role-user { background: #3498db; color: white; }

        .status-active {
            color: #2ecc71;
            font-weight: 600;
        }
    </style>
{% endblock %}
