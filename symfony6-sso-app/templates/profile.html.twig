{% extends 'base.html.twig' %}

{% block title %}Profil - Symfony 6 SSO{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Profil utilisateur</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    <i class="fas fa-user text-white fa-2x"></i>
                                </div>
                                <h5 class="mt-3">{{ user.firstName ?? user.username }} {{ user.lastName ?? '' }}</h5>
                                <p class="text-muted">{{ user.email }}</p>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h5>Informations personnelles</h5>
                            <table class="table table-striped">
                                <tr>
                                    <td><strong>Nom d'utilisateur:</strong></td>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Prénom:</strong></td>
                                    <td>{{ user.firstName ?? 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Nom:</strong></td>
                                    <td>{{ user.lastName ?? 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <td><strong>ID Keycloak:</strong></td>
                                    <td><code>{{ user.keycloakId }}</code></td>
                                </tr>
                                <tr>
                                    <td><strong>Rôles:</strong></td>
                                    <td>
                                        {% for role in user.roles %}
                                            <span class="badge bg-secondary">{{ role }}</span>
                                        {% endfor %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-12">
                            <h5>Informations de session</h5>
                            <div class="alert alert-info">
                                <p><strong>Application:</strong> Symfony 6</p>
                                <p><strong>Authentification:</strong> Keycloak SSO</p>
                                <p><strong>URL de l'application:</strong> {{ app.request.schemeAndHttpHost }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_dashboard') }}" class="btn btn-primary">Retour au Dashboard</a>
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">Se déconnecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}