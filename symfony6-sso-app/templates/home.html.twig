{% extends 'base.html.twig' %}

{% block title %}Accueil - Symfony 6 SSO{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Bienvenue sur l'application Symfony 6 avec SSO Keycloak</h3>
                </div>
                <div class="card-body">
                    {% if app.user %}
                        <div class="alert alert-success">
                            <h4>Bonjour {{ app.user.firstName ?? app.user.username }} !</h4>
                            <p>Vous êtes connecté via Keycloak SSO.</p>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_dashboard') }}" class="btn btn-primary">Accéder au Dashboard</a>
                            <a href="{{ path('app_profile') }}" class="btn btn-secondary">Voir le Profil</a>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <h4>Authentification requise</h4>
                            <p>Veuillez vous connecter pour accéder aux fonctionnalités de l'application.</p>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}